<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddWorkoutActivity">

    <TextView
        android:id="@+id/addworkouttextview"
        android:layout_width="118dp"
        android:layout_height="31dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="681dp"
        android:text="Add a workout"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/workoutname"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/workoutname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/workoutname"
        android:layout_width="221dp"
        android:layout_height="52dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="593dp"
        android:autoText="false"
        android:ems="10"
        android:hint="@string/workoutname"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/WorkoutDescription"
        app:layout_constraintStart_toStartOf="@+id/WorkoutDescription"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/WorkoutDescription"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="529dp"
        android:ems="10"
        android:hint="@string/workoutdescription"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addworkout"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="@+id/addworkout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginBottom="451dp"
        android:text="Add Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Viewcurrent"
        android:layout_width="164dp"
        android:layout_height="31dp"
        android:layout_marginTop="304dp"
        android:layout_marginBottom="408dp"
        android:text="View Workout Current"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addworkout"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/addworkout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WorkoutList"
        android:layout_width="328dp"
        android:layout_height="381dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>